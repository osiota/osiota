{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"description": "schema for an energy router config file",
	"type": "object",
	"required": [ "hostname" ],
	"title": "energy-router configuration",
	"properties": {
		"hostname": {
			"type": "string"
		},
		"server": {
			"type": "number"
		},
		"connect": {
			"type": "object",
			"title": "Connect nodes to each other",
			"patternProperties": {
				"^(.+)$": {
					"type": "object",
					"properties": {
						"address": {
							"type": "number"
						},
						"default": {
							"type": "number"
						}
					},
					"required": ["address"]
				}
			},
			"additionalProperties": true,
			"options": {
				"disable_properties": false,
				"disable_edit_json": false
			}
		},
		"remote": {
			"type": "array",
			"title": "Remotes",
			"format": "table",
			"items": {
				"type": "object",
				"title": "Remote",
				"properties": {
					"name": {
						"type": "string"
					},
					"url": {
						"type": "string",
						"pattern": "^ws(s)?:\/\/[a-zA-Z0-9-_\.]+(?:[0-9]+)(?:/.*)$"
					},
					"node": {
						"type": "string"
					}
				},
				"required": ["name", "url"]
			}
		},
		"app": {
			"type": "array",
			"title": "Applications",
			"format": "tabs",
			"keep_oneof_values": false,
			"items": {
				"type": "object",
				"title": "Application",
				"oneOf": [
				]
			}
		}
	}
}
