{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"description": "schema for an energy router config file",
	"type": "object",
	"required": [ "hostname", "connect", "server", "remote", "app" ],
	"title": "energy-router configuration",
	"properties": {
		"hostname": {
			"title": "Hostname",
			"type": "string",
			"description": "Name of the energy-router"
		},
		"server": {
			"title": "Server",
			"description": "Open a WebSocket server port, to allow other instances to connect to this energy-router.",
			"oneOf": [
				{
					"type": "null",
					"title": "deaktiviert"
				},
				{
					"type": "number",
					"title": "Port",
					"minimum": 1,
					"default": 8080
				}
			],
			"default": false,
			"options": {
				"keep_oneof_values": false
			}
		},
		"connect": {
			"type": "array",
			"format": "table",
			"title": "Forwarding rules",
			"description": "To forward data from a node to an other node, you can add forwarding rules:",
			"items": {
				"type": "object",
				"title": "Connection",
				"properties": {
					"source": {
						"type": "string"
					},
					"target": {
						"type": "string"
					}
				},
				"required": ["source", "target"]
			}
		},
		"remote": {
			"type": "array",
			"title": "Remotes",
			"description": "To get or forward data from or to an other energy-router instance, you can add remotes.",
			"format": "table",
			"items": {
				"type": "object",
				"title": "Remote",
				"properties": {
					"name": {
						"type": "string",
						"default": "remote"
					},
					"url": {
						"type": "string",
						"pattern": "^ws(s)?://[a-zA-Z0-9-_.]+(:[0-9]+)?(/.*)?$",
						"default": "ws://localhost:8081"
					},
					"node": {
						"type": "string",
						"default": "/"
					}
				},
				"required": ["name", "url"]
			}
		},
		"app": {
			"type": "array",
			"title": "Applications",
			"description": "Applications allow to extend the functionality.",
			"format": "tabs",
			"items": {
				"type": "object",
				"title": "Application",
				"headerTemplate": "Application #{{ i1 }}",
				"oneOf": [
				],
				"options": {
					"keep_oneof_values": true
				}
			}
		},
		"policies": {
			"type": "object",
			"properties": {
				"node": {
					"type": "string",
					"minLength": 1
				},
				"remote": {
					"type": "string"
				},
				"metadata": {
					"type": "object",
					"patternProperties": {
						"^(.*)$": {
							"disallow": ["object","array"]
						}
					}
				},
				"action": {
					"type": "string",
					"oneOf": [{
						"title": "Hide resource",
						"values": ["hide_all"]
					},{
						"title": "Hide value and metadata",
						"values": ["hide_value_and_metadata"]
					},{
						"title": "Hide value",
						"values": ["hide_value"]
					},{
						"title": "Preprocess value",
						"values": ["preprocess_value"]
					},{
						"title": "Forward all",
						"values": ["forward_all"]
					},{
						"title": "Block write",
						"values": ["block_write"]
					},{
						"title": "Allow write",
						"values": ["allow_write"]
					}],
					"default": "forward_all"
				}
			},
			"additionalProperties": false,
			"required" : ["action"],
			"anyOf" : [
				{"required" : ["node"]},
				{"required" : ["remote"]},
				{"required" : ["metadata"]}
			]
		}
	}
}
