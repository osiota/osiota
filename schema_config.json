{
	"description": "schema for an osiota config file",
	"type": "object",
	"title": "osiota configuration",
	"properties": {
		"hostname": {
			"title": "Hostname",
			"type": "string",
			"description": "Name of the osiota instance"
		},
		"server": {
			"title": "Server",
			"description": "Open a WebSocket server port, to allow other instances to connect to this instance.",
			"oneOf": [
				{
					"type": "null",
					"title": "deaktiviert"
				},
				{
					"type": "number",
					"title": "Port",
					"minimum": 1,
					"default": 8080
				}
			],
			"default": false,
			"options": {
				"keep_oneof_values": false
			}
		},
		"remote": {
			"type": "array",
			"title": "Remotes",
			"description": "To get or forward data from or to an other osiota instance, you can add remotes.",
			"items": {
				"type": "object",
				"title": "Remote",
				"properties": {
					"name": {
						"type": "string",
						"default": "remote"
					},
					"url": {
						"type": "string",
						"pattern": "^ws(s)?://[a-zA-Z0-9-_.]+(:[0-9]+)?(/.*)?$",
						"default": "ws://localhost:8081"
					},
					"node": {
						"type": "string",
						"default": "/"
					}
				},
				"required": ["name", "url"]
			}
		},
		"app": {
			"type": "array",
			"title": "Applications",
			"description": "Applications allow to extend the functionality.",
			"items": {
				"type": "object",
				"title": "Application",
				"headerTemplate": "Application #{{ i1 }}",
				"oneOf": [
				],
				"options": {
					"keep_oneof_values": true
				}
			}
		},
		"policies": {
			"type": "array",
			"title": "Privacy policies",
			"description": "You can prevent data from forwarding by defining privacy policies.",
			"items": {
				"type": "object",
				"properties": {
					"node": {
						"type": "string"
					},
					"remote": {
						"type": "string"
					},
					"metadata": {
						"type": "object",
						"patternProperties": {
							"^(.*)$": {
								"disallow": ["object","array"]
							}
						},
						"additionalProperties": true,
						"options": {
							"disable_properties": false,
							"disable_edit_json": false
						}
					},
					"action": {
						"oneOf": [{
							"type": "string",
							"title": "Hide resource",
							"values": ["hide_all"]
						},{
							"type": "string",
							"title": "Hide value and metadata",
							"values": ["hide_value_and_metadata"]
						},{
							"type": "string",
							"title": "Hide value",
							"values": ["hide_value"]
						},{
							"type": "string",
							"title": "Preprocess value",
							"values": ["preprocess_value"]
						},{
							"type": "string",
							"title": "Forward all",
							"values": ["forward_all"]
						},{
							"type": "string",
							"title": "Block write",
							"values": ["block_write"]
						},{
							"type": "string",
							"title": "Allow write",
							"values": ["allow_write"]
						}],
						"default": "forward_all"
					}
				},
				"additionalProperties": false,
				"required" : ["action"]
			}
		}
	},
	"definitions": {
		"filter": {
			"type": "object",
			"title": "Node filter options",
			"properties": {
				"metadata": {
					"type": "object",
					"title": "Meta data to filter",
					"additionalProperties": true,
					"options": {
						"disable_properties": false,
						"disable_edit_json": false
					}
				},
				"nodes": {
					"type": "array",
					"title": "List of nodes permitted",
					"items": {
						"type": "string"
					}
				},
				"depth": {
					"type": "number",
					"title": "Node depth permitted"
				}
			}
		}
	}
}
